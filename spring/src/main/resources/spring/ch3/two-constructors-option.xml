<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="provider"
          class="com.cosmina.ch2.decoupled.ConfigurationMessageProvider"
          c:message="I hope that someone gets my message in a bottle"/>

    <bean id="constructorConfusion"
          class="com.cosmina.ch3.two_constructors.ConstructorConfusion">
        <constructor-arg type="int" value="90"/>
    </bean>
</beans>