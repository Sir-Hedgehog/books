<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singer" class="com.cosmina.ch3.lookup_method_injection.xml.Singer" scope="prototype"/>

    <bean id="abstractLookupBean" class="com.cosmina.ch3.lookup_method_injection.xml.AbstractLookupDemoBean">
        <lookup-method name="getMySinger" bean="singer"/>
    </bean>

    <bean id="standardLookupBean" class="com.cosmina.ch3.lookup_method_injection.xml.StandardLookupDemoBean">
        <property name="mySinger" ref="singer"/>
    </bean>
</beans>